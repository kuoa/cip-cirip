<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	<display-name>cip-cirip</display-name> 
	
	<servlet> 
		<servlet-name>create</servlet-name> 
		<servlet-class>services.servlets.user.Create</servlet-class> 
	</servlet> 
	
	<servlet> 
		<servlet-name>delete</servlet-name> 
		<servlet-class>services.servlets.user.Delete</servlet-class> 
	</servlet> 
	
	<servlet> 
		<servlet-name>login</servlet-name> 
		<servlet-class>services.servlets.user.Login</servlet-class> 
	</servlet> 
	
	<servlet> 
		<servlet-name>logout</servlet-name> 
		<servlet-class>services.servlets.user.Logout</servlet-class> 
	</servlet> 
	
	<servlet> 
		<servlet-name>add</servlet-name> 
		<servlet-class>services.servlets.friends.Add</servlet-class> 
	</servlet> 
	
	<servlet> 
		<servlet-name>remove</servlet-name> 
		<servlet-class>services.servlets.friends.Remove</servlet-class> 
	</servlet> 
	
	
	<servlet-mapping> 
		<servlet-name>create</servlet-name> 
		<url-pattern>/user/create</url-pattern> 
	</servlet-mapping> 
	
	<servlet-mapping> 
		<servlet-name>delete</servlet-name> 
		<url-pattern>/user/delete</url-pattern> 
	</servlet-mapping> 
	
	<servlet-mapping> 
		<servlet-name>login</servlet-name> 
		<url-pattern>/user/login</url-pattern> 
	</servlet-mapping> 
	
	<servlet-mapping> 
		<servlet-name>logout</servlet-name> 
		<url-pattern>/user/logout</url-pattern> 
	</servlet-mapping> 
	
	<servlet-mapping> 
		<servlet-name>add</servlet-name> 
		<url-pattern>/friends/add</url-pattern> 
	</servlet-mapping> 
	
	<servlet-mapping> 
		<servlet-name>remove</servlet-name> 
		<url-pattern>/friends/remove</url-pattern> 
	</servlet-mapping> 
	
</web-app>